# NeuraLabs Database Configuration
# Copy this file to .env and update with your actual values

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_DB=neuralabs
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_PORT=5432

# Optional: Connection Pool Settings
# POSTGRES_MIN_CONNECTIONS=1
# POSTGRES_MAX_CONNECTIONS=20

# Optional: SSL Configuration (uncomment if needed)
# POSTGRES_SSLMODE=require
# POSTGRES_SSLCERT=/path/to/client-cert.pem
# POSTGRES_SSLKEY=/path/to/client-key.pem
# POSTGRES_SSLROOTCERT=/path/to/ca-cert.pem

# Development Settings
# Set to 'true' for development mode with detailed logging
# DEBUG=false


# Redis Configuration
REDIS_PASSWORD=password123
REDIS_HOST=localhost
REDIS_PORT=6379